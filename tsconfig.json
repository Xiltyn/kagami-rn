{
	"compilerOptions": {
		"allowJs": false,
		"outDir": "build",
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": [
			"es6"
		],
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"target": "esnext"
	},
	"filesGlob": [
		"typings/index.d.ts"
	],
	"exclude":[
		"node_modules"
	]
}
